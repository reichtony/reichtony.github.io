<ips:template parameters="$title, $blurb='', $rawBlurb=FALSE" />

<div class='ipsPageHeader ipsClearfix ipsSpacer_bottom'>
	<h1 class='ipsType_pageTitle'>{$title}</h1>
	{{if $blurb}}
		<div class='ipsPageHeader_info ipsType_light'>
			{{if !$rawBlurb}}
				{$blurb}
			{{else}}
				{$blurb|raw}
			{{endif}}
		</div>
	{{endif}}
</div>